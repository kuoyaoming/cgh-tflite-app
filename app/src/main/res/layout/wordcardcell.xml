<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wordcard_layout"
    android:layout_width="match_parent"
    android:layout_height="240dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_wordcard1"
                android:layout_width="240dp"
                android:layout_height="180dp"
                android:gravity="center_horizontal"
                android:src="@drawable/wordcard01_1"/>

            <TextView
                android:id="@+id/text_wordcard1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/wordcard01_1"
                android:background="@color/colorWhite"
                android:textSize="20sp"
                android:textColor="@color/colorSlateGray"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_wordcard1_recode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/recodestart"
                    android:scaleType="centerInside"
                    android:background="@drawable/oval_recode" />

                <ImageButton
                    android:id="@+id/btn_wordcard1_play"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/play"
                    android:scaleType="centerInside"
                    android:background="@drawable/oval_recode" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_wordcard1"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="50dp"
                android:layout_marginLeft="2dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>